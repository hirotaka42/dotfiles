{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IME辞書管理スキーマ",
  "description": "個人用IME辞書データの管理形式",
  "type": "object",
  "properties": {
    "辞書情報": {
      "type": "object",
      "properties": {
        "名前": {"type": "string"},
        "説明": {"type": "string"},
        "更新日": {"type": "string"}
      }
    },
    "カテゴリ": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "説明": {"type": "string"},
            "有効": {"type": "boolean", "default": true},
            "単語リスト": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "読み": {"type": "string"},
                  "単語": {"type": "string"},
                  "品詞": {"type": "string", "default": "名詞"},
                  "説明": {"type": "string"},
                  "タグ": {
                    "type": "array",
                    "items": {"type": "string"}
                  }
                },
                "required": ["読み", "単語"]
              }
            }
          },
          "required": ["単語リスト"]
        }
      }
    }
  },
  "required": ["カテゴリ"]
}